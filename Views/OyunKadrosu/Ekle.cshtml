@using EntityLayer;
@model OyunKadrosu;
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-2">
    <h3>OyunKadrosu Ekle</h3>
    @using (Html.BeginForm("Ekle", "OyunKadrosu", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.Label("Yazan")
        @Html.TextBoxFor(OyunKadrosu=>OyunKadrosu.Yazan,new { @class = "form-control" })
        @Html.ValidationMessageFor(OyunKadrosu=>OyunKadrosu.Yazan,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Yönetmen")
        @Html.TextBoxFor(OyunKadrosu=>OyunKadrosu.Yönetmen,new { @class = "form-control" })
        @Html.ValidationMessageFor(OyunKadrosu=>OyunKadrosu.Yönetmen,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Oyuncular")
        @Html.TextBoxFor(OyunKadrosu=>OyunKadrosu.Oyuncular,new { @class = "form-control" })
        @Html.ValidationMessageFor(OyunKadrosu=>OyunKadrosu.Oyuncular,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Durum")
        <select class="form-control" name="silindi">
            <option>False</option>
            <option>True</option>
        </select>
        <br />
        <input class="form-control btn btn-primary" type="submit" value="Ekle" />
    }
</div>



