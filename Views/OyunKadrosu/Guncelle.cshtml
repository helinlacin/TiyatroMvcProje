@using EntityLayer;
@model OyunKadrosu;
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-2">
    <h3>OyunKadrosu Guncelle</h3> 
    @using (Html.BeginForm("Guncelle", "OyunKadrosu", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.TextBoxFor(OyunKadrosu=>OyunKadrosu.OyunKadrosuId,new { @class = "form-control",@name="OyunKadrosuId",@value="@Model.OyunKadrosuId",@type="hidden"})
        @Html.Label("Yazan")
        @Html.TextBoxFor(OyunKadrosu=>OyunKadrosu.Yazan,new { @class = "form-control",@name="Yazan",@value="@Model.Yazan" })
        @Html.ValidationMessageFor(OyunKadrosu=>OyunKadrosu.Yazan,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Yönetmen")
        @Html.TextBoxFor(OyunKadrosu=>OyunKadrosu.Yönetmen,new { @class = "form-control",@name="Yönetmen",@value="@Model.Yönetmen" })
        @Html.ValidationMessageFor(OyunKadrosu=>OyunKadrosu.Yönetmen,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Oyuncular")
        @Html.TextBoxFor(OyunKadrosu=>OyunKadrosu.Oyuncular,new { @class = "form-control",@name="Oyuncular",@value="@Model.Oyuncular" })
        @Html.ValidationMessageFor(OyunKadrosu=>OyunKadrosu.Oyuncular,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Durum")
        <select class="form-control" name="silindi">
            if (Model.silindi)
            {
            <option selected>True</option>
            <option>False</option>
            }
            else
            {
            <option>True</option>
            <option selected>False</option>
            }
        </select>
        <br />
        <input class="form-control btn btn-primary" type="submit" value="OyunKadrosu Güncelle" />
    }
</div>



