@using EntityLayer;
@model OyunSalon;
@{
    ViewData["Title"] = "Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="p-2">
    <h3>Seans Ekle</h3>
    @using (Html.BeginForm("Ekle", "OyunSalon", FormMethod.Post, new { @class = "form-group" }))
    {
        @Html.Label("Tarih")
        @Html.TextBoxFor(OyunSalon=>OyunSalon.Tarih,new { @class = "form-control" })
        @Html.ValidationMessageFor(OyunKadrosu=>OyunKadrosu.Tarih,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Saat")
        @Html.TextBoxFor(OyunSalon=>OyunSalon.Saat,new { @class = "form-control" })
        @Html.ValidationMessageFor(OyunSalon=>OyunSalon.Saat,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Durum")
        <select class="form-control" name="silindi">
            <option>False</option>
            <option>True</option>
        </select>
        <br />
        <input class="form-control btn btn-primary" type="submit" value="Ekle" />
    }
</div>

