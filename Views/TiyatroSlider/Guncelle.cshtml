@using EntityLayer
@model TiyatroSlider
@{
    ViewData["Title"] = "Guncelle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="p-2">
    <h2>Güncelle</h2>
    @using (Html.BeginForm("Guncelle", "TiyatroSlider", FormMethod.Post, new { @class = "form-group" }))
    {

        @Html.TextBoxFor(TiyatroSlider=>TiyatroSlider.SliderId,new { @class = "form-control",@type="hidden" })


        @Html.Label("Slider Adı")
        @Html.TextBoxFor(TiyatroSlider=>TiyatroSlider.SliderName,new { @class = "form-control" })
        @Html.ValidationMessageFor(TiyatroSlider=>TiyatroSlider.SliderName,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Resim Seç")
        ;
        @Html.TextBoxFor(TiyatroSlider=>TiyatroSlider.ResimUrl, "", new { type="file", @class="form-control",@value="enesdfsdgf" })
        @Html.ValidationMessageFor(TiyatroSlider=>TiyatroSlider.ResimUrl,"",new { @class ="text-danger" })
        <br />
        @Html.Label("Silindi")
        <select class="form-control" name="TiyatroSliderSilindi">
            if (Model.TiyatroSliderSilindi)
            {
            <option selected>True</option>
            <option>False</option>
            }
            else
            {
            <option>True</option>
            <option selected>False</option>
            }
        </select>
        <br />
        <input class="form-control btn btn-primary" type="submit" value="Güncelle" />
    }
</div>


