@using EntityLayer;
@model List<Salon>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Salonlar</h2>


<table class="table">
    <thead>
        <tr>
            <th>SalonNo</th>
            <th>Konum</th>
            <th>Kapasite</th>
            <th>Durum</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SalonNo</td>
                <td>@item.Konum</td>
                <td>@item.Kapasite</td>
                <td>@item.</td>
                
               
                <td>@item.SalonSilindi</td>
                <td>
                    <button type="button" class="btn btn-outline-danger  text-center" data-bs-whatever="@item.SalonId" data-bs-toggle="modal" data-bs-target="#decisionPopup"><i class="fas fa-trash"></i></button>
                </td>
                <td><a href="/Salon/Guncelle/@item.SalonId" type="button" class="btn btn-outline-primary p-2">Guncelle</a></td>
            </tr>

        }

    </tbody>
</table>


<div class="text-center d-flex justify-content-start p-2">
    <a href="/Salon/Ekle" class="btn btn-success"><ion-icon name="add" style="font-size:30px"></ion-icon></a>
</div>

<!-- Modal -->
@*#decisionPopup Model*@
<div class="modal fade" id="decisionPopup" tabindex="=-1" aria-labelledby="silLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title" id="silLabel">Uyarı</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Silmek istediğinizden emin misiniz?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hayır</button>
                <a id="delete-btn" href="" class="btn btn-success">Evet</a>
            </div>
        </div>
    </div>
</div>


